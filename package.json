  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "@types/jest": "^28.1.2",
    "concurrently": "^7.2.1",
    "cross-env": "^7.0.3",
    "jest": "^28.1.1",
    "prettier": "^2.7.1",
    "rollup": "^2.75.1",
    "rollup-plugin-dts": "^4.2.2",
    "ts-jest": "^28.0.5",
    "typescript": "^4.7.4"
  },
  "workspaces": [
    "./packages/*"
  ]
}
